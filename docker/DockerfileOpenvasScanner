# Dockerfile for openvas service

FROM greenbone/openvas-scanner:stable

VOLUME /etc/openvas
VOLUME /var/log/openvas


CMD ["/bin/sh", "-c", "\
    cat /etc/openvas/openvas.conf && \
    tail -f /var/log/openvas/openvas.log"]
